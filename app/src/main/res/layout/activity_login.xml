<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:windowSoftInputMode="adjustResize"
    tools:context=".start_activitys.LoginActivity">

    <ImageView
        android:id="@+id/logo_white"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_skip_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_txt"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black3"
        android:fontFamily="@font/montserrat_light"
        android:text="Пропустить авторизацию"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20sp" />


    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_below="@id/logo_white"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_input"


        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"

        android:ems="10"
        android:fontFamily="@font/montserrat_light"
        android:hint="Почта"

        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black1"
        android:textColorHint="@color/gray"

        android:textSize="14sp"
        tools:ignore="RtlSymmetry,TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/email_login"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat_light"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black1"
        android:textColorHint="@color/gray"

        android:textSize="14sp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <ImageButton

        android:id="@+id/show_password_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/password_login"
        android:layout_alignEnd="@id/password_login"
        android:paddingEnd="20dp"
        android:backgroundTint="@color/invis"
        android:scaleType="fitCenter"
        android:layout_marginBottom="2dp"
        android:src="@drawable/invisible"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_login"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Войти"
        android:textColor="@color/black1"

        android:textSize="19sp"
        app:cornerRadius="20sp" />

    <Button
        android:id="@+id/register_txt"
        android:layout_below="@id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowRadius="40"
        android:shadowColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/invis"
        android:fontFamily="@font/montserrat_light"
        android:text="Нет учетной записи?"
        android:textSize="16sp" />

</RelativeLayout>