<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".bottom_nav.profile_activitys.FragmentProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/purple_500"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="@color/off_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/name_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/alata"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/white1"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="90sp"
            android:layout_marginTop="240dp"
            android:backgroundTint="@color/gray"
            android:text="Редактировать"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:cornerRadius="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="30sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profileImageView"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp">

            <ImageButton
                android:id="@+id/go_settings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/invis"
                android:elevation="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_settings_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp">

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/invis"
                android:elevation="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_logout_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>